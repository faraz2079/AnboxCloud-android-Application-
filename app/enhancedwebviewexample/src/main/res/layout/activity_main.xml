<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/gateway_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/text_field_gateway_url_hint"
                android:inputType="textUri"
                android:text="https://172.22.174.251" />

        </LinearLayout>

        <EditText
            android:id="@+id/api_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/text_field_api_token_hint"
            android:inputType="none|textPersonName"
            android:text="AgEUYW5ib3gtc3RyZWFtLWdhdGV3YXkCBHRlc3QAAhQyMDI0LTA4LTAyVDEzOjQ4OjM0WgACFDIwMjUtMDgtMDJUMTM6NDg6MzRaAAAGINpzT4eZOY2Y8Ddj0rAK-J5vq6UB1dFPvjyQwqves7LE" />

        <EditText
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/text_field_app_name_hint"
            android:inputType="none|textPersonName"
            android:text="APPP" />

    </LinearLayout>

    <Button
        android:id="@+id/start_streaming"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="startStreaming"
        android:text="@string/button_start_streaming"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
